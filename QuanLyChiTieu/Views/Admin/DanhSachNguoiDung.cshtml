@model List<QuanLyChiTieu.Models.NguoiDung>

@{
    ViewBag.Title = "Trang quản trị - Danh sách người dùng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Trang Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .admin-container {
            max-width: 1300px;
            margin: 0 auto;
            min-height: 100vh;
        }

        .admin-header {
            height: 60px;
        }

        .sidebar {
            width: 200px;
            min-height: 700px;
            background-color: #f8f9fa;
        }

        .content {
            flex: 1;
            min-height: 700px;
            background-color: #ffffff;
            margin-left: 20px;
            padding: 20px;
        }

        .logout-btn {
            background-color: #ffffff;
            color: #e53935;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header d-flex justify-content-between align-items-center px-4">
            <div class="sidebar-heading text-center py-3">
                <img src="~/images/logo_qlct.png" alt="logo" width="80px" />
            </div>
            <div class="d-flex align-items-center gap-2">
                <span>Xin chào, @(Context.Session.GetString("fullname") ?? "Người dùng")</span>
            </div>
        </div>

        <!-- Body -->
        <div class="d-flex p-4">
            <!-- Sidebar -->
            @await Html.PartialAsync("_SlidebarAdmin")

            <!-- Main Content -->
            <div class="content">
                <h2>Danh sách người dùng</h2>

                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Tên đăng nhập</th>
                            <th>Số điện thoại</th>
                            <th>Giới tính</th>
                            <th>Loại người dùng</th>
                            <th>Ghi chú</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var index = 1;
                        }

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@user.fname @user.lname</td>
                                <td>@user.email</td>
                                <td>@user.username</td>
                                <td>@user.phone</td>
                                <td>@user.gender</td>
                                <td>@user.ten_loai</td>
                                <td>@user.descriptions</td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a class="" style="background: none !important; border: none !important;cursor: pointer;" data-bs-toggle="modal" data-bs-target="#">
                                            <span class="text-primary">[Sửa]</span>
                                        </a>
                                        <a class="ms-2" style="background: none !important; border: none !important;cursor: pointer;" data-bs-toggle="modal" data-bs-target="#">
                                            <span class="text-danger">[Xóa]</span>
                                        </a>                            
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



