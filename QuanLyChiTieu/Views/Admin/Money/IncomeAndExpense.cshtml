@model List<QuanLyChiTieu.Models.ChiTieu>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: absolute; right: 0;">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
    </div>
}
@{
    ViewBag.Title = "Quản lý chi tiêu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Trang Admin - Quản lý chi tiêu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .admin-container {
            max-width: 1600px;
            margin: 0 auto;
            min-height: 100vh;
        }

        .admin-header {
            height: 60px;
        }

        .sidebar {
            width: 200px;
            min-height: 700px;
            background-color: #f8f9fa;
        }

        .content {
            flex: 1;
            min-height: 700px;
            background-color: #ffffff;
            margin-left: 20px;
            padding: 20px;
        }

        .logout-btn {
            background-color: #ffffff;
            color: #e53935;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        @await Html.PartialAsync("_HeaderAdmin")

        <!-- Body -->
        <div class="d-flex p-4">
            <!-- Sidebar -->
            @await Html.PartialAsync("_SidebarAdmin")

            <!-- Main Content -->
            <div class="content">
                <h2>Quản lý chi tiêu</h2>
                <div class="row">
                    <div class="col-8">
                        <button class="btn btn-success" onclick="openQuanLyChiTieuModal()">➕ Thêm khoản thu - chi</button>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control" id="searchInput" placeholder="Nhập nội dung...">
                    </div>
                </div>
                <table class="table table-bordered table-hover mt-3">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Loại chi tiêu</th>
                            <th>Danh mục</th>
                            <th>Số tiền</th>
                            <th>Ghi chú</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var index = 1;
                            foreach (var thuchi in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@thuchi.titles</td>
                                    <td>@thuchi.ten_loaichitieu</td>
                                    <td>@thuchi.ten_danhmuc</td>
                                    <td>@thuchi.total @thuchi.ten_loaitiente </td>
                                    <td>@thuchi.notes </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a class="" style="background: none !important; border: none !important;cursor: pointer;"
                                               onclick="openQuanLyChiTieuModal()">
                                                <span class="text-primary">[Sửa]</span>
                                            </a>
                                            <a class="ms-2" style="background: none !important; border: none !important;cursor: pointer;" onclick="">
                                                <span class="text-danger">[Xóa]</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr><td colspan="7">Không có dữ liệu.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Thêm Thu Chi -->
    <div class="modal fade" id="updateChiTieuModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static" data-bs-focus="false">
        <div class="modal-dialog">
            <form method="post" id="chiTieuForm" action="">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="chiTieuId" />
                        <div class="mb-3">
                            <label class="form-label">Tiêu đề</label>
                            <input type="text" class="form-control" name="titles" id="titles" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Loại chi tiêu</label>
                            <div class="d-flex justify-content-center">
                                <select class="form-select" name="id_loaichitieu" id="selectLoaiChiTieu" required>
                                    @foreach (var loaichitieu in (List<QuanLyChiTieu.Models.LoaiChiTieu>)ViewBag.listLoaiChiTieu)
                                    {
                                        <option value="@loaichitieu.id">@loaichitieu.sname</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <div class="d-flex justify-content-center">
                                <select class="form-select" name="id_danhmuc" id="selectDanhMuc" required>
                                    @foreach (var danhmuc in (List<QuanLyChiTieu.Models.DanhMuc>)ViewBag.listDanhMuc)
                                    {
                                        <option value="@danhmuc.id">@danhmuc.sname</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Loại tiền tệ</label>
                            <div class="d-flex justify-content-center">
                                <select class="form-select" name="id_loaitiente" id="selectLoaiTienTe" required>
                                    @foreach (var loaitiente in (List<QuanLyChiTieu.Models.LoaiTienTe>)ViewBag.listLoaiTienTe)
                                    {
                                        <option value="@loaitiente.id">@loaitiente.sname</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số tiền</label>
                            <input type="number" class="form-control" name="total" id="total" required />
                        </div>
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <!-- Đính kèm ảnh -->
                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea class="form-control" name="notes" id="notes"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <script>
            setTimeout(function () {
                var alertBox = document.querySelector('.alert');
                if (alertBox) {
                    var alert = bootstrap.Alert.getOrCreateInstance(alertBox);
                    alert.close();
                }
            }, 2000); // 2 giây = 2000ms
        </script>


        <!-- Lọc tại clien -->
        <script>
            document.getElementById('searchInput').addEventListener('input', function () {
                const keyword = this.value.toLowerCase();
                const rows = document.querySelectorAll('table tbody tr');
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(keyword) ? '' : 'none';
                });
            });
        </script>

        <script>
            function openQuanLyChiTieuModal(id, title, loaichitieu, danhmuc, loaitiente, total, ghichu) {
                // Kiểm tra nếu có ID (đang chỉnh sửa)
                if (id) {
                    // Đang chỉnh sửa
                    $('#modalLabel').text('Chỉnh sửa chi tiêu');
                } else {
                    // Đang thêm mới
                    $('#modalLabel').text('Thêm mới chi tiêu');
                }


                // ✅ Set trạng thái checkbox
                // $('#inputMacDinh').prop('checked', trangthai === 'True' || trangthai === true);

                $('#updateChiTieuModal').modal('show');
            }
        </script>

    }
</body>
</html>



