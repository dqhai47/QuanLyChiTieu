
@model QuanLyChiTieu.Models.NguoiDung

@{
    ViewData["Title"] = "Quản lý chi tiêu - Đăng ký";
    Layout = null;
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f8f9fa;
        }

        .register-box {
            max-width: 800px;
            margin: auto;
            margin-top: 5%;
            display: flex;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 12px;
            overflow: hidden;
            background: #fff;
        }

        .register-left {
            width: 50%;
        }

        .register-left img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .register-right {
            width: 50%;
            padding: 40px;
        }
        .form-control {
            border-radius: 10px;
        }

        .btn-register {
            background-color: #e53935;
            border: none;
            border-radius: 10px;
            padding: 10px;
            font-weight: bold;
        }
        .text-link {
            font-size: 0.9rem;
            text-decoration: none;
            color: #e53935;
        }
    </style>
</head>
<body>
    <div class="register-box">
        <div class="register-left">
            <img src="~/images/campus_qlct.png" alt="coin" />
        </div>
        <div class="register-right">
            <h4 class="mb-4 text-center text-danger">ĐĂNG KÝ</h4>

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label>Họ: <span style="color: red">*</span></label>
                    <input asp-for="fname" class="form-control" />
                    <span asp-validation-for="fname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Tên: <span style="color: red">*</span></label>
                    <input asp-for="lname" class="form-control" />
                    <span asp-validation-for="lname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Số điện thoại: </label>
                    <input asp-for="phone" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Email: </label>
                    <input asp-for="email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Giới tính:</label>
                    <select asp-for="gender" class="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label>Tên đăng nhập: <span style="color: red">*</span></label>
                    <input asp-for="username" class="form-control" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Mật khẩu: <span style="color: red">*</span></label>
                    <input asp-for="pwd" class="form-control" type="password" />
                </div>
                <button type="submit" class="btn btn-register w-100">Đăng ký</button>
            </form>
              <a asp-action="Login">Đã có tài khoản? Đăng nhập</a>
        </div>
    </div>
</body>
</html>



